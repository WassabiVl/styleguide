{% block content %}

{%  if bgColor is defined %}
<div class="fragment {{bgColor}}">
{% else %}
<div class="fragment {{random(fragmentSetup.colorRange)}}">
{% endif %}
    {% if templateRender == false %}
        {% include "atoms-colorswitch" %}
    {% endif %}
    <div class="page-wrapper">
        <div class="row ns">
            <div class="column column-100 no-padding">
                <div class="headline">
                    <h2>Willkommen</h2>
                </div>
            </div>
        </div>
        <div class="row ns">
                {% for i in range(1,5) %}
                    <div class="column column-33 column-m-50 column-s-100">
                        <a href="#">
                            <div class="offer-element">
                                <div class="outer">
                                    <div class="background" style="background-image:url({{ img.landscape_1x1.src }})"></div>
                                    <div class="inner">
                                        <div class="icon"></div>
                                        <div class="text">Ludwig²<br>{{i}} Übernachtungen</div>
                                        <div class="button-pos hide-mobile"></div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <div class="button-pos show-only-mobile"><a href="#" class="button">Jetzt buchen</a></div>
                    </div>
                {% endfor %}

        </div>
    </div>
</div>
{% endblock %}